package Ecommerce.servocosProdutos.models.cadastros;

import Ecommerce.servocosProdutos.enums.CategoriaProdutosEnum;
import jakarta.persistence.*;

import java.io.Serializable;

@Entity
@Table(name = "produtosCategorias", schema = "categoria")
public class ProdutosCategoriaModel implements Serializable {

    private static final long serialVersionUID = 1L;

    @Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    @Column(name = "categoriaProdutosId", unique = true, nullable = false)
    private Long categoriaId;

    @Column(name = "TipoProduto", unique = true, nullable = false, length = 50)
    private String tipoProduto;

    @Enumerated(EnumType.STRING)
    @Column(nullable = false)
    private CategoriaProdutosEnum categoriaProdutosEnum;

    public Long getCategoriaId() {
        return categoriaId;
    }

    public void setCategoriaId(Long categoriaId) {
        this.categoriaId = categoriaId;
    }

    public String getTipoProduto() {
        return tipoProduto;
    }

    public void setTipoProduto(String tipoProduto) {
        this.tipoProduto = tipoProduto;
    }

    public CategoriaProdutosEnum getCategoriaProdutosEnum() {
        return categoriaProdutosEnum;
    }

    public void setCategoriaProdutosEnum(CategoriaProdutosEnum categoriaProdutosEnum) {
        this.categoriaProdutosEnum = categoriaProdutosEnum;
    }
}
